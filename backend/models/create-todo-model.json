{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "group",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 20
    },
    "dueDate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "minLength": 1,
      "description": "dueDate must be in the format YYYY-MM-DD"
    }
  },
  "required": [
    "name",
    "dueDate"
  ],
  "additionalProperties": false
}
